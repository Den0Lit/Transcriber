{
    "name": "Transcriber",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage",
    "tabs",
    "tabCapture",
    "speechRecognition",
    "audioCapture",
    "microphone",
    "activeTab",
    "storage",
    "runtime",
    "https://*/",
    "http://*/",
    "scripting"],
    "action": {
        "default_popup": "main.html"
    },
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    },
    "icons": {
    "128": "icon128.png"
    },
    "host_permissions": ["*://*/"],
    "options_page": "options.html",
    "scripts": ["popup2.js"],

    "background": {
      "service_worker": "background.js"
    }
}
    
